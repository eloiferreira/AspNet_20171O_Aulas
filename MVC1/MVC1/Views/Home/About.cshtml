@{
    ViewBag.Title = "About";
}
<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>

<p class="text-danger">@ViewBag.Batatinha</p>


@foreach(string str in ViewBag.Batata)
{
    if (str.Contains("legal"))
    {
        <div class="alert alert-success" role="alert">@str</div>
    }
    else
    {
        <div class="alert alert-danger" role="alert">@str</div>
    }
}

<p>Use this area to provide additional information.</p>
